<h1>Usuários</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Senha</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Exibir', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
  </tr>
<% end %>
</table>

